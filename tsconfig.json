{
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist/",
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "./src/",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "kaboom": ["./node_modules/kaboom/dist/kaboom"],
            "@/**": ["./src/**"]
        }
    },
    "include": [
        "./src/*.ts",
        "src/classes/ActionManager.ts",
        "src/utils/textWithOptions.ts"
    ]
}
