{
    "name": "mandarinavn",
    "version": "1.0.0",
    "description": "A visual novel engine, using kaboom.js",
    "author": "lajbel",
    "license": "MIT",
    "main": "./dist/mandarina.js",
    "module": "./dist/mandarina.mjs",
    "types": "./dist/mandarina.d.ts",
    "type": "module",
    "scripts": {
        "dev": "nodemon --watch ./src --watch ./example --exec \"npm run build && npm run example\" --ext \"ts\"",
        "build": "node scripts/build.js",
        "watch": "nodemon --watch ./src --exec \"npm run build\" --ext \"ts\"",
        "dev:example": "esbuild example/main.ts --bundle --outfile=example/game.js --servedir=./example/",
        "watch:example": "esbuild example/main.ts --bundle --outfile=example/game.js --watch --servedir=./example/",
        "fmt": "eslint --fix src/"
    },
    "files": [
        "dist/",
        "src/",
        "README.md"
    ],
    "dependencies": {
        "kaboom": "^3000.0.12"
    },
    "devDependencies": {
        "@types/node": "^18.14.0",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.59.9",
        "esbuild": "^0.17.9",
        "eslint": "^8.34.0",
        "nodemon": "^1.14.9",
        "prettier": "^2.8.8",
        "typescript": "^4.9.5"
    }
}
