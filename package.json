{
    "name": "mandarinavn",
    "version": "0.1.0",
    "description": "A visual novel engine, using kaboom.js",
    "author": "lajbel",
    "license": "MIT",
    "main": "./dist/mandarina.js",
    "module": "./dist/mandarina.mjs",
    "types": "./dist/mandarina.d.ts",
    "type": "module",
    "scripts": {
